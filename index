    h1 {
      color: #2c3e50;
      margin-bottom: 1rem;
    }
    button {
      padding: 12px 24px;
      font-size: 1.1rem;
      background-color: #3498db;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
