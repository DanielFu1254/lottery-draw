  <h1>ğŸ æŠ½çæ´»å‹•ï¼ˆå¾ç¬¬13åæŠ½åˆ°ç¬¬1åï¼‰</h1>

  <form id="participantForm" onsubmit="addParticipant(); return false;">
    <input type="text" id="name" placeholder="åƒèˆ‡è€…å§“å" required>
    <input type="number" id="entries" placeholder="åƒèˆ‡æ¬¡æ•¸" required min="1">
    <button type="submit">æ–°å¢åƒèˆ‡è€…</button>
  </form>

  <button onclick="startDraw()">é–‹å§‹æŠ½ç</button>
  <button onclick="drawNext()">æŠ½å‡ºä¸‹ä¸€å€‹çé …</button>

  <p id="currentPrize"></p>
  <ul id="results"></ul>

  <script>
    let participants = [];
    let remaining = [];
    const totalPrizes = 13;
    let currentRank = totalPrizes;

    function addParticipant() {
      const name = document.getElementById('name').value.trim();
      const entries = parseInt(document.getElementById('entries').value);

      if (participants.length >= totalPrizes) {
        alert("æœ€å¤šåªèƒ½è¼¸å…¥ 13 ä½åƒèˆ‡è€…ï¼");
        return;
      }

      if (!name || entries <= 0) return;

      participants.push({ name, entries });
      document.getElementById('participantForm').reset();
      alert(`å·²æ–°å¢ï¼š${name}ï¼ˆ${entries} æ¬¡ï¼‰`);
    }

    function startDraw() {
      if (participants.length < totalPrizes) {
        alert("åƒèˆ‡è€…å¿…é ˆè‡³å°‘æœ‰ 13 ä½ã€‚");
        return;
      }
      remaining = [...participants];
      currentRank = totalPrizes;
      document.getElementById("results").innerHTML = "";
      document.getElementById("currentPrize").textContent = "é–‹å§‹æŠ½çï¼è«‹æŒ‰ä¸‹ã€æŠ½å‡ºä¸‹ä¸€å€‹çé …ã€ã€‚";
    }

    function drawNext() {
      if (remaining.length === 0 || currentRank === 0) return;

      document.getElementById("currentPrize").textContent = `æ­£åœ¨æŠ½å‡ºç¬¬ ${currentRank} å...`;

      const weights = remaining.map(p => 1 / p.entries);
      const totalWeight = weights.reduce((a, b) => a + b, 0);
      const rand = Math.random() * totalWeight;

      let acc = 0;
      let selectedIndex = 0;
      for (let i = 0; i < weights.length; i++) {
        acc += weights[i];
        if (rand <= acc) {
          selectedIndex = i;
          break;
        }
      }

      const winner = remaining[selectedIndex];
      remaining.splice(selectedIndex, 1);

      const li = document.createElement("li");
      li.className = "winner";
      li.textContent = `ç¬¬ ${currentRank} åï¼š${winner.name}ï¼ˆåƒèˆ‡ ${winner.entries} æ¬¡ï¼‰`;
      document.getElementById("results").prepend(li);

      currentRank--;
      if (currentRank === 0) {
        document.getElementById("currentPrize").textContent = "âœ… æŠ½çå®Œæˆï¼";
      }
    }
  </script>
